<head>
    
    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <%
        var title = page.title;

        if (is_archive()){
            title = 'Archive';
        if (is_month()){
            title += ': ' + page.year + '/' + page.month;
        } else if (is_year()){
            title += ': ' + page.year;
        }
        } else if (is_category()){
            title = 'Category: ' + page.category;
        } else if (is_tag()){
            title = 'Tag: ' + page.tag;
        }
    %>
    <title><% if (title){ %><%= title %> | <% } %><%= config.title %></title>
    
    <% if (page.description || is_home()) { %>
    
        <meta name="description" content="<%= page.description || config.description %>">
    
    <% } %>
    
    <link rel="stylesheet" href="<%- config.root + theme.css %>">

    <link rel="icon" type="image/png" href="<%- config.root + theme.favicon %>">

    <link rel="canonical" href="<%- url_for(path) %>">
    
</head>