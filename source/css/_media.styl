@media screen and (max-width: 768px)
    .gutter
        display: none
    
    .site-header-main
        height: auto
        padding: 20px 0
        text-align: center
    
        h1
            float: none
            line-height:1.3
            margin-right: 0

        p
            line-height: 2
    
    [class*='col-']
        float: left
        padding: 0
        margin-bottom: block-40

        +:first-child
            padding: 0 5px 0 0

        +:last-child
            padding: 0 0 0 5px
            margin-bottom: 0

    .content-archive .col-1-3
        width: 100%

    
