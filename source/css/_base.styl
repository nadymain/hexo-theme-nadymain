*, *:before, *:after
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box

html
    -webkit-text-size-adjust: 100%
    -ms-text-size-adjust: 100%
    overflow-y: scroll

body, h1, h2, h3, h4, h5, h6,
p, blockquote, pre, hr, td, th,
dl, dd, ol, ul, figure
    margin: 0

a
    text-decoration: none

h1,h2,h3
    font-weight: 400
    line-height: 1
    
nav ul
    list-style: none
    padding: 0
    margin:0

nav li
    float:left

li ul, li ol
    margin-bottom: 0

table 
    border-collapse: collapse
    border-spacing: 0
    
td, th
  padding: 0

img 
    border: 0
    max-width: 100%

pre 
    white-space: pre
    white-space: pre-wrap
    word-wrap: break-word

small 
    font-size: 80%

hr 
    -moz-box-sizing: content-box
    box-sizing: content-box
    height: 0
    margin-top: 40px
    margin-bottom: 40px
    border: 0
    border-top: 1px solid #eee

dt
    font-weight: 700

button,
html input[type="button"],
input[type="reset"],
input[type="submit"] 
    -webkit-appearance: button
    cursor: pointer

.clear,header,footer,article,nav,section,aside
    display: block

.clear:after,header:after,footer:after,article:after,
nav:after,section:after,aside:after
    content: " "
    display: block
    height: 0
    clear: both
    visibility: hidden

/*
    Responsive iframe
*/
.video-container
    position: relative
    padding-top: (9 / 16 * 100)% // 16:9 ratio
    height: 0
    overflow: hidden
    margin-bottom: 40px

    iframe, object, embed
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        margin-top: 0

